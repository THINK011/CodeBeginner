# guess_number

import random

guess_number = random.randint(1, 100) # Generate a random number between 1 and 100 

while True: # Repeat until the user guesses correctly
   try:  # if user type a string (show then only type valid number)
      user_guess = int(input("Guess a number between(1-100): "))
      if user_guess < guess_number:
         print("Too low!")
      elif user_guess > guess_number:
         print("Too high!")
      else:
         print("Congratulations! You've guessed the number.")
         break
   except ValueError:
      print("Please enter a valid number.")
